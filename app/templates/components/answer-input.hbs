{{#display-letter-container as |displayLetterContainer|}}
  {{#each currentAnswerLetterInfos as |letterInfo|}}
    {{displayLetterContainer.letter
      letter=letterInfo.letter
      showBackground=letterInfo.isEditable
    }}
  {{/each}}
{{/display-letter-container}}

{{input-keyboard
  class="keyboard"
  onCharacterPressed=(action "characterPressed")
  onDeleteCharacter=(action "deleteCharacter")
}}
