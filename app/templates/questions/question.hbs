{{#liquid-bind question use="toLeft" as |currentQuestion|}}
  <h2>Question {{questionNumber}}/{{questionsCount}}</h2>

  <h3>{{currentQuestion.text}}</h3>

  {{#liquid-unless hasCorrectAnswer}}
    {{answer-input
      correctAnswer=currentQuestion.answer
      onIsAnswerCorrectChanged=(action (mut hasCorrectAnswer))
    }}
  {{else}}
    {{#if nextQuestion}}
      <button {{action (route-action "goToNextQuestion")}}>
        Next
      </button>
    {{else}}
      <button {{action (route-action "goToAnagram")}}>
        Finish
      </button>
    {{/if}}
  {{/liquid-unless}}
{{/liquid-bind}}
